{
  "manifest_version": 2,
  "name": "Kagi-Obsidian Bridge",
  "version": "1.0",
  "description": "Integrates Obsidian search with Kagi results",

  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "*://kagi.com/*",
    "*://*.kagi.com/*"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [{
    "matches": [
      "*://kagi.com/*", 
      "*://*.kagi.com/*"
    ],
    "js": ["content.js"],
    "run_at": "document_end"
  }],

  "web_accessible_resources": [
    "sidebar/sidebar.css",
    "sidebar/sidebar.html"
  ],

  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Kagi-Obsidian Bridge",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
